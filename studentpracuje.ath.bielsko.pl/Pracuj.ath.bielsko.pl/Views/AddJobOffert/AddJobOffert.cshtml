                                </div>
                            </div>
                        </div>

                        <div class="page-header">
                            <h4>Opis</h4>
                        </div>
                        @Html.CkEditorFor(m => m.JobDescription, new { @class = "ckeditor" })
                        <br />
                        <div class="form-group">
                            <div class="col-md-11">
                                <input type="submit" value="Dodaj oferte" class="button" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-11">
                                <span class="text-danger field-validation-error">@ViewBag.LoginError</span>
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
}
