@*el Pracuj.Models.Job*@
@model Pracuj.ath.bielsko.pl.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "JobOffers";
}

@section Banner
{
    <div class="wrapper">
    <div class="page-header page-header-small">
        <div class="page-header-image" data-parallax="false" style="background-image: url(/Content/themes/images/1.jpg);">
        </div>
        <div class="container">
            <div class="content-center" style="padding-top:50px;">
                <h1 class="title">Przeglądaj oferty pracy.</h1>
            </div>
        </div>
    </div>
    </div>
}

@section Content {

    <div class="container">
        <div class="row card primar" data-background-color="orange" style=" padding:20px; margin-top:40px;">
                <div class="col-md-12">
                    <h3 style="color:white">Szukaj:</h3>
                    <div class="row">
                        <div class="col-md-8">
                            <div class="input-group form-group-no-border input-lg">
                                <span class="input-group-addon">
                                    <i class="now-ui-icons ui-1_zoom-bold"></i>
                                </span>
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "szukaj...", @style = "width: 100%" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            @Html.ActionLink("Szukaj", "Register", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @style = "width: 100%", @class = "btn btn-primary btn-simple btn-round btn-lg" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.EnumDropDownListFor(model => model.AccountType, "Wybierz typ", new { @class = "btn btn-default btn-simple", @placeholder = "Typ Konta", @style = "width:inherit;  border-radius:30px; width: 100%; background-color:rgb(249, 99, 50); " })
                        </div>
                        <div class="col-md-6">
                            @Html.EnumDropDownListFor(model => model.AccountType, "Wybierz typ", new { @class = "btn btn-default btn-simple", @placeholder = "Typ Konta", @style = "width:inherit;  border-radius:30px; width: 100%; background-color:rgb(249, 99, 50); " })
                        </div>
                    </div>
                </div>
            </div>

            <div class="team">
                <div class="row card primar"style="  padding:20px; margin-top:40px;">
                    <div class="col-md-1">
                        <div class="team-player text_align-center">
                            <img src="~/Content/themes/images/apple.png" alt="Thumbnail Image" class="rounded img-fluid" style="max-height:90px;">
                            <p class="" style="text-align:center;">Apple</p>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="team-player">
                            @Html.ActionLink("Swift Senior Analyst Programmer", "JobView", "Job", routeValues: null, htmlAttributes: new { id = "loginLink", @style = "width: 100%;text-align:left; font-size:20px;", @class = "btn btn-link btn-primary" })
                            <div class="input-group form-group-no-border input-lg" style="margin-bottom:0px; padding:0px;">
                                <span class="input-group-addon" style="padding:0px; padding-right:7px; background-color:white;">
                                    <i class="now-ui-icons ui-2_settings-90" style="background-color:white;"></i>
                                </span>
                                <p style="background-color:white; margin-bottom:0px;">Programista</p>
                            </div>
                            <div class="input-group form-group-no-border input-lg" style="margin-bottom:20px; padding:0px;">
                                <span class="input-group-addon" style="padding:0px; background-color:white; padding-right:7px;">
                                    <i class="now-ui-icons ui-1_calendar-60"></i>
                                </span>
                                <p style=" margin-bottom:0px;">Praca tymczasowa</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2 ">
                        <div class="team-player">
                            <div class="input-group form-group-no-border input-lg" style="margin-bottom:0px; padding:2px;">
                                <span class="input-group-addon" style="padding:0px;background-color:white; padding-right:7px;">
                                    <i class="now-ui-icons ui-2_time-alarm"></i>
                                </span>
                                <p style=" margin-bottom:0px;">01/01/0001</p>
                            </div>
                            <div class="input-group form-group-no-border input-lg" style="margin-bottom:20px; padding:2px;">
                                <span class="input-group-addon" style="padding:0px;background-color:white; padding-right:7px;">
                                    <i class="now-ui-icons location_pin"></i>
                                </span>
                                <p style=" margin-bottom:0px;">Dunaj</p>
                            </div>
                            @Html.ActionLink("Zobacz oferte", "JobView", "Job", routeValues: null, htmlAttributes: new { id = "loginLink", @style = "width: 100%;text-align:left; font-size:20px;", @class = "btn btn-link btn-primary" })


                        </div>
                    </div>
                </div>
            </div>
        </div>


}